@model OnlineBookStore.Models.CoverType;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Create New Cover Type";
}

<form method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger border"></div>
        @if (Model.Id != 0)
        {
            title = "Edit Cover Type";
        }
        <div class="col-12 border">
            <h2 class="text-primary">@title</h2>
        </div>

        <div class="col-8 pt-4 border">
            <div class="form-group row border">
                <div class="col-4 border">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8 border">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row border">
                <div class="col-8 offset-4 border">
                    @if (Model.Id != 0)
                    {
                        <partial name="_EditAndBackToListButton" model="Model.Id" />
                    }
                    else
                    {
                        <partial name="_CreateAndBackToListButton" />
                    }
                </div>
            </div>
        </div>

    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}